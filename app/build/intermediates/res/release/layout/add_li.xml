<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/policy_no" />

        <EditText
            android:id="@+id/editPolicyNo"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" >
            <requestFocus />
        </EditText>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textPh"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/policy_holder" />

        <EditText
            android:id="@+id/editPolicyHolder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters|textCapWords" >

        </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/textName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/policy_name" />


        <EditText
            android:id="@+id/editPolicyName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters" >

        </EditText>
        </LinearLayout>
        
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/textCompany"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/company" />



        <EditText
            android:id="@+id/editCompany"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters|textCapWords" >
        </EditText>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/textStartdate"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:text="@string/start_date" />
            
            <EditText
                android:id="@+id/editStartDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
            </EditText>

            <ImageButton
                android:id="@+id/buttonDateDialog"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:onClick="showStartDateDialog"
                android:src="@drawable/data" android:contentDescription="Date  Picker">
            </ImageButton>
        </LinearLayout>
        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textDuedate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/due_date"/>

            <EditText
                android:id="@+id/editDueDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content" >
            </EditText>

            <ImageButton
                android:id="@+id/buttonEndDateDialog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:onClick="showEndDateDialog"
                android:src="@drawable/data" >
            </ImageButton>
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            

        <TextView
            android:id="@+id/textPeriod"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/period" />


        <EditText
            android:id="@+id/editPeriod"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number" >

        </EditText>
        
        </LinearLayout>
        
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         

               <TextView
                   android:id="@+id/textAmount"
                   android:layout_width="120dp"
                   android:layout_height="wrap_content"
                   android:text="@string/premium_amount" />

        <EditText
            android:id="@+id/editPremiumAmount"
            android:layout_width="150dp"
            android:inputType="number"
            android:layout_height="wrap_content" >
        </EditText>
        </LinearLayout>
        
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         
               <TextView
            android:id="@+id/textSum"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/sum_assured" />

        <EditText
            android:id="@+id/editSumAssured"
            android:layout_width="150dp"
            android:inputType="number"
            android:layout_height="wrap_content" >
        </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="add"
            android:text="@string/add"></Button>
    </LinearLayout>

</ScrollView><!-- From: file:/C:/Users/asdf/StudioProjects/FinancialNotifier/app/src/main/res/layout/add_li.xml -->