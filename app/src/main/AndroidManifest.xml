<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.st.fn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".activites.FinancialNotifierMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.VehiclesActivity"
            android:label="Vehicle Insurance Menu" >
        </activity>
        <activity
            android:name=".activites.UpdateVehicleActivity"
            android:label="Update Vehicle Insurance" >
        </activity>
        <activity
            android:name=".activites.AddVIActivity"
            android:label="Add Vechicle Insurance" >
        </activity>
        <activity
            android:name=".activites.LifeInsurancesActivity"
            android:label="Life Insurances Menu" >
        </activity>
        <activity
            android:name=".activites.AddLIActivity"
            android:label="Add Life Insurance" >
        </activity>
        <activity
            android:name=".activites.UpdateLifeInsuranceActivity"
            android:label="Update Life Insurance" >
        </activity>
        <activity
            android:name=".activites.UpcomingEventsActivity"
            android:label="Upcoming Events" >
        </activity>
        <activity
            android:name=".activites.PrefsActivity"
            android:label="Preferences" >
        </activity>
        <activity
            android:name=".activites.DepositsActivity"
            android:label="Fixed Deposits" >
        </activity>
        <activity
            android:name=".activites.AddFDActivity"
            android:label="Add Fixed Deposits" >
        </activity>
        
        <activity
            android:name=".activites.UpdateDepositActivity"
            android:label="Update Deposit" >
        </activity>
        
        <activity
            android:name=".activites.BackupRestoreActivity"
            android:label="Backup and Restore" >
        </activity>

        <receiver android:name=".DateChangeBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.st.fn.NOTIFY" />
            </intent-filter>
        </receiver>
    </application>

</manifest>